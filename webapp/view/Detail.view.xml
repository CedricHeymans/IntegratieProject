<mvc:View
	controllerName="IntProject.IntegratieProject.controller.Detail"
	xmlns="sap.m"
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">

	<semantic:SemanticPage
		id="detailPage"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}">
		<semantic:titleHeading>
			<Title
				text="{Tknum}"
				level="H2"/>
		</semantic:titleHeading>
		<semantic:headerContent>
            <ObjectHeader
                icon="sap-icon://shipping-status"
                title="{ContainerId}"
                class="sapUiResponsivePadding--header" >
            </ObjectHeader>
            <ObjectIdentifier 
                text="{Transporteur}"
            />
        </semantic:headerContent>
		<semantic:content>
			<IconTabBar
		        id="idIconTabBarNoIcons"
		        expanded="{device>/isNoPhone}"
		        class="sapUiResponsiveContentPadding">
		<items>
			
			<IconTabFilter text="Deliveries" key="deliveries">
			<VBox>
                <Table id="lineItemsList" width="auto" items="{ShipToDelivNav}" updateFinished=".onListUpdateFinished" noDataText="{i18n>detailLineItemTableNoDataText}" busyIndicatorDelay="{detailView>/lineItemTableDelay}">
                    <headerToolbar>
                        <Toolbar>
                            <Title id="lineItemsTitle" text="Deliveries" titleStyle="H3" level="H3"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="{i18n>tknum}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>vbeln}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>vstel}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>werks}"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Active" press="onPress">
                            <cells>
                                <ObjectIdentifier text="{Tknum}"/>
                                <ObjectIdentifier text="{Vbeln}"/>
                                <ObjectIdentifier text="{Vstel}"/>
                                <ObjectIdentifier text="{Werks}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                
                <Table id="deliveryItems" items="{detailView>/DeliveryItems}" noDataText="{i18n>detailLineItemTableNoDataText}">
                    <columns>
                        <Column>
                            <Text text="{i18n>lfimg}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>matnr}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>posnr}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>vbeln}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>vrkme}"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <ObjectIdentifier text="{detailView>Lfimg}"/>
                                <ObjectIdentifier text="{detailView>Matnr}"/>
                                <ObjectIdentifier text="{detailView>Posnr}"/>
                                <ObjectIdentifier text="{detailView>Vbeln}"/>
                                <ObjectIdentifier text="{detailView>Vrkme}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
			</IconTabFilter>
		</items>
	</IconTabBar>
		</semantic:content>
		<!--Semantic ShareMenu Buttons-->
		<semantic:sendEmailAction>
			<semantic:SendEmailAction
				id="shareEmail"
				press=".onSendEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:closeAction>
			<semantic:CloseAction
					id="closeColumn"
					press=".onCloseDetailPress"/>
		</semantic:closeAction>

		<semantic:fullScreenAction>
			<semantic:FullScreenAction
					id="enterFullScreen"
					visible="{= !${device>/system/phone} &amp;&amp; !${appView>/actionButtonsInfo/midColumn/fullScreen}}"
					press=".toggleFullScreen"/>
		</semantic:fullScreenAction>
		<semantic:exitFullScreenAction>
			<semantic:ExitFullScreenAction
					id="exitFullScreen"
					visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}"
					press=".toggleFullScreen"/>
		</semantic:exitFullScreenAction>

	</semantic:SemanticPage>

</mvc:View>